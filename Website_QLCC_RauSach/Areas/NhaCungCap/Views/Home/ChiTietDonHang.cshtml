@model List<ChiTietDonHangViewModel>

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/NhaCungCap/Shared/_LayoutContainer.cshtml";
}

<style>
    .custom-navbar-background {
        background: #fefae0;
        color: black;
        border: 2px solid #e9edc9;
    }
</style>
<script src="https://cdn.tailwindcss.com"></script>
<div class="hero-wrap hero-bread hero-t" style="background-image: url('images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="font-bold text-5xl">CHI TIẾT ĐƠN HÀNG</h1>
            </div>
        </div>
    </div>
</div>
<div class="border-2 border-success p-4 my-4 position-relative flex rounded">
    <div class="flex gap-3 ml-10 mt-3 mb-3" style="font-size: 20px;">
        <div> Mã Đơn Hàng:</div>
        <div> @Model.FirstOrDefault()?.MaDh </div>
    </div>
    <div class="ml-10">
        @foreach (var chiTietDonHang in Model)
        {
            <div class="border-2 border-primary p-4 my-4 position-relative flex rounded">
                <img class="img-fluid img-thumbnail" src="@chiTietDonHang.DuongDanHinhAnh" style="width: 300px; height: 300px;"/>
                <div>
                    <div class="flex gap-3 ml-10 mt-3 mb-3" style="font-size: 20px;">
                        <div> Mã Mặt Hàng:</div>
                        <div> @chiTietDonHang.Mamh</div>
                    </div>
                    <div class="flex gap-3 ml-10 mt-3 mb-3" style="font-size: 20px;">
                        <div> Tên Mặt Hàng: </div>
                        <div> @chiTietDonHang.TenMatHang</div>
                    </div>
                    <div class="flex gap-3 ml-10 mt-3 mb-3" style="font-size: 20px;">
                        <div> Mô Tả: </div>
                        <div> @chiTietDonHang.MoTa</div>
                    </div>
                    <div class="flex gap-3 ml-10 mt-3 mb-3" style="font-size: 20px;">
                        <div> Đv Tính: </div>
                        <div> @chiTietDonHang.DonViTinh</div>
                    </div>
                    <div class="flex gap-3 ml-10 mb-3" style="font-size: 20px;">
                        <div> Số Lượng Đặt: </div>
                        <div> @chiTietDonHang.SoLuongDat</div>
                    </div>
                    <div class="flex gap-3 ml-10 mb-3" style="font-size: 20px;">
                        <div> Đơn Giá: </div>
                        <div>  @string.Format("{0:0,0 VND}", @chiTietDonHang.DonGia)</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
