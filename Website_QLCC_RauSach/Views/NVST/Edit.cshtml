@model Website_QLCC_RauSach.Models.HoaDon
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh sửa Hóa Đơn</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        .container {
            margin-top: 20px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h4 {
            color: #343a40;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn {
            border-radius: 5px;
        }
        .form-group label {
            font-weight: bold;
        }
        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h4>Chỉnh sửa Hóa Đơn</h4>
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input asp-for="MaHd" name="MaHd" type="hidden" value="@ViewBag.MaHd"/>
                    <div class="form-group">
                        <label asp-for="MaDh" class="control-label"></label>
                        <input asp-for="MaDh" class="form-control" name="MaDh" />
                    </div>
                    <div class="form-group">
                        <label asp-for="MaNvgh" class="control-label"></label>
                        <input asp-for="MaNvgh" class="form-control" name="MaNvgh"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayTaoHd" class="control-label"></label>
                        <input asp-for="NgayTaoHd" class="form-control" />
                        <span asp-validation-for="NgayTaoHd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TongTien" class="control-label"></label>
                        <input asp-for="TongTien" class="form-control" />
                        <span asp-validation-for="TongTien" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhuongThucThanhToan" class="control-label"></label>
                        <input asp-for="PhuongThucThanhToan" class="form-control" />
                        <span asp-validation-for="PhuongThucThanhToan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GhiChu" class="control-label"></label>
                        <input asp-for="GhiChu" class="form-control" />
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
